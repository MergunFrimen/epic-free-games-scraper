{
    "compilerOptions": {
      "target": "ES2021",
      "module": "Node16",
      "rootDir": "src",
      "outDir": "build",
      "sourceMap": true,
      "moduleResolution": "Node16",
      "resolveJsonModule": false,
      "allowSyntheticDefaultImports": true,
      "moduleDetection": "force",
      "lib": ["ES2020", "dom"],
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }